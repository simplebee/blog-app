<% include ./partials/header %>

<div class="ui text container segment">
  <div class="ui huge header">New Post</div>
  <form class="ui form" action="/blog" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="Title">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="Image url">
    </div>
    <div class="field">
      <label>Blog Post</label>
      <textarea name="blog[body]" placeholder="Type something here"></textarea>
    </div>
    <button class="ui green button">Submit</button>
  </form>
</div>

